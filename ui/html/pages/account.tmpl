{{define "title"}}Your Account{{end}}

{{define "main"}}
    <h2>Your Account</h2>
    {{with .User}}
     <table>
        <tr>
            <th>Name</th>
            <td>{{.Name}}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{.Email}}</td>
        </tr>
        <tr>
            <th>Joined</th>
            <td>{{humanDate .Created}}</td>
        </tr>
        <tr>
            <!-- Add a link to the change password form -->
            <th>Password</th>
            <td><a href="/account/password">Change password</a></td>
        </tr>
    </table>
    {{end}}

    <h3>Your Posts</h3>
    {{if .Posts.Created}}
    <ul>
        {{range .Posts.Created}}
        <li><a href="/posts/{{.ID}}">{{.Title}}</a> ({{humanDate .Created}})</li>
        {{end}}
    </ul>
    {{else}}
    <p>You have not created any posts.</p>
    {{end}}

    <h3>Liked Posts</h3>
    {{if .Posts.Liked}}
    <ul>
        {{range .Posts.Liked}}
        <li><a href="/posts/{{.ID}}">{{.Title}}</a> ({{humanDate .Created}})</li>
        {{end}}
    </ul>
    {{else}}
    <p>You have not liked any posts.</p>
    {{end}}
{{end}}
