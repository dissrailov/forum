{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest Posts</h2>
    {{if .Posts}}
        <div class="post-list">
            {{range .Posts}}
                <div class="post">
                    <h3><a href="/post/view?id={{.ID}}">{{.Title}}</a></h3>
                    <p>{{.Content}}</p>
                    <div class="metadata">
                        <span>Created: {{humanDate .Created}}</span>
                        <!-- Add likes and dislikes if needed -->
                    </div>
                </div>
            {{end}}
        </div>
    {{else}}
        <p class="empty-message">There's nothing to see here... yet!</p>
    {{end}}
{{end}}
