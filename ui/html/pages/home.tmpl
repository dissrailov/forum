<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="/forum/ui/static/css/main.css">
    <style>
        /* Inline styles can also be used here if necessary */
    </style>
</head>
<body>
    {{template "main" .}}
</body>
</html>

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest Posts</h2>
    {{if .Posts}}
        <div class="post-list">
            <table class="post-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Created</th>
                        <th>ID</th>
                        <th>Likes</th>
                        <th>Dislikes</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .Posts}}
                    <tr>
                        <td><a href="/post/view?id={{.ID}}">{{.Title}}</a></td>
                        <td>{{humanDate .Created}}</td>
                        <td>#{{.ID}}</td>
                        <td>
                            <form action="/post/like" method="post" class="like-form">
                                <input type="hidden" name="postID" value="{{.ID}}">
                                <button type="submit" class="like-button">Like</button>
                                <span class="like-count">{{.Likes}}</span>
                            </form>
                        </td>
                        <td>
                            <form action="/post/dislike" method="post" class="dislike-form">
                                <input type="hidden" name="postID" value="{{.ID}}">
                                <button type="submit" class="dislike-button">Dislike</button>
                                <span class="dislike-count">{{.Dislikes}}</span>
                            </form>
                        </td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </div>
    {{else}}
        <p class="empty-message">There's nothing to see here... yet!</p>
    {{end}}
{{end}}
